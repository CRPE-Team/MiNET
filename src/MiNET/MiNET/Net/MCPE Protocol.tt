private string GetFieldType(string formatFieldType)
{
	switch (formatFieldType)
	{
		case "VarInt":
		case "SignedVarInt":
		case "Length":
			return "int";
		case "UnsignedVarInt":
			return "uint";
		case "VarLong":
		case "SignedVarLong":
		case "UnsignedVarLong":
			return "long";
		case "ByteArray":
				return "byte[]";
		case "FixedString":
			return "string";
		default:
			return formatFieldType;
	}
